{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  // Refresh time in minutes for fetching new jobs
  "RefreshTimeInMin": 10,

  "LinkedIn": {
    // Disable/Enable web browser visibility
    "RunHeadless": true,
    // Delay between each page load in seconds
    "PageLoadDelayInSec": 1,
    // Maximum number of times to retry fetching a job entry before giving up
    "MaxFetchRetry": 2,
    // Maximum number of pages to scrape for each job search
    "MaxPagesToScrape": 10,
    // Maximum number of jobs to fetch for each job search
    "MaxJobsToFetch": 50,
    // Delay between each job fetch in seconds
    "JobFetchDelay": 2,
    // Maximum number of times to retry fetching a job before giving up
    "LoadTimeoutSec": 60
  },

  "Jobs": [
    {
      "SearchTerm": "Software Engineer",
      // Optional, leave empty to search "Worldwide"
      "Location": "",
      // Optional, leave empty to search all experience levels
      "ExperienceLevel": "Intern",
      // Optional, leave empty to search all job types
      //"RemoteType": "Any",
      // Optional, set to true to skip promoted jobs
      "SkipPromoted": false
    },
    {
      "SearchTerm": "Software Engineer",
      "ExperienceLevel": "Entry",
      "SkipPromoted": false
    }
  ]
}
